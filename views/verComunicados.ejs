<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/style.css">
    <title>Comunicados</title>
    <style>
        .comunicado {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        .comunicado-general {
            background-color: #f5f5f5;
        }
        .comunicado-curso {
            background-color: #e0f7fa;
        }
        .etiqueta-general {
            color: #ff5722;
            font-weight: bold;
        }
        .etiqueta-curso {
            color: #03a9f4;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Comunicados</h1>

    <div id="comunicados">
        <% if (comunicados.length > 0) { %>
            <% comunicados.forEach(function(comunicado) { %>
                <div class="comunicado <%= comunicado.general ? 'comunicado-general' : 'comunicado-curso' %>">
                    <h2>
                        <%= comunicado.titulo %> 
                        <span class="<%= comunicado.general ? 'etiqueta-general' : 'etiqueta-curso' %>">
                            [<%= comunicado.general ? 'General' : 'Curso' %>]
                        </span>
                    </h2>
                    <p><%= comunicado.info %></p>
                    <small>Por: <%= comunicado.fk_id_preceptor ? comunicado.fk_id_preceptor.nombre + ' ' + comunicado.fk_id_preceptor.apellido : 'Directivo' %></small>
                </div>
            <% }) %>
        <% } else { %>
            <p>No hay comunicados disponibles.</p>
        <% } %>
    </div>

    <br><a href="/estudiante-dashboard">Ir a mi inicio</a>

    <footer>
        <div class="button-container">
            <a href="/estudiante-dashboard">
                <button class="button material-icons">home</button>
            </a>
            <a href="/comunicados">
                <button class="button material-icons">book</button>
            </a>
            <button class="button material-icons">person</button>
            <a href="/logout">
                <button class="button material-icons">logout</button>
            </a>
        </div>
    </footer>
</body>
</html>
